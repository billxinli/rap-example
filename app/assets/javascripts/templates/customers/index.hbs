<div class="page-header">
  <h1>Customers</h1>
</div>

{{#each customer in customers}}
  <div class="row">
    <div class="widget-box no-border">
      <div class="widget-header widget-header-large">
        <h3>
          <i class="fa fa-male"></i>
          {{customer.name}}
        </h3>
        <div class="widget-toolbar no-border">
          {{#link-to "vehicles.new" classNames="btn btn-sm btn-primary"}}
            <i class="fa fa-plus"></i>
            Add Vehicle
          {{/link-to}}
        </div>
      </div>
      <table width="75%" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th width="10px" class="center">#</th>
            <th width="50%">Year</th>
            <th width="50%">Make</th>
            <th width="10px">Delete</th>
          </tr>
        </thead>
        <tbody>
          {{#each vehicle in customer.vehicles}}
            <tr>
              <td class="center">{{vehicle.id}}</td>
              <td>{{vehicle.year}}</td>
              <td>{{vehicle.make}}</td>
              <td class="center">
                  <a href="#" class="btn btn-sm" {{action 'deleteVehicle' vehicle}}><i class="fa fa-times"></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
{{/each}}
